@model List<StudentManagementSystem.Entities.Entity.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2 class="mb-4">My Enrolled Courses</h2>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var course in Model)
        {
            <li class="list-group-item">@course.Title</li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">You are not enrolled in any courses yet.</div>
}
