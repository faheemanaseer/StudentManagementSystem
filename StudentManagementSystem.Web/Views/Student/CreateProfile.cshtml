@model StudentManagementSystem.Web.Models.StudentViewModel

@{
    ViewData["Title"] = "Create Profile";
}

<div class="container py-5">
    <div class="row justify-content-start">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="CreateProfile" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Age" class="form-label"></label>
                            <input asp-for="Age" type="number" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Create Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
