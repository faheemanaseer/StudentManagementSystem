@using StudentManagementSystem.Business.DTOs
@model List<CourseDto>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="d-flex justify-content-between align-items-start mb-4">
                <h3 class="mb-0">Enrolled Courses</h3>
                <a asp-controller="Student" asp-action="Profile" class="btn btn-secondary">My Profile</a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">You are not enrolled in any courses.</div>
            }
            else
            {
                <p class="mb-3">You are currently enrolled in:</p>
                <ul class="list-group shadow-sm">
                    @foreach (var course in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>@course.Title</strong></span>
                            <span class="text-muted">
                                Instructor: @(string.IsNullOrEmpty(course.InstructorName) ? "Not Assigned" : course.InstructorName)
                            </span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
