@model StudentManagementSystem.Business.DTOs.StudentDto
@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4">Welcome, @Model.Name!</h2>

<table class="table table-bordered table-striped table-hover align-bottom">
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Age</th>
        <td>@Model.Age</td>
    </tr>
</table>

<a asp-action="EditProfile" class="btn btn-secondary">Edit Profile</a>
<a asp-controller="Student" asp-action="EnrolledCourses" class="btn btn-secondary">Back to Courses</a>