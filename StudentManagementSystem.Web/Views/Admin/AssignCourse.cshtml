@{
    ViewData["Title"] = "Assign Course";
    var studentId = (int)ViewBag.StudentId;
    var courseList = ViewBag.CourseList as List<SelectListItem>;
    var assignedCourses = ViewBag.AssignedCourses as List<StudentManagementSystem.Business.DTOs.CourseDto>;
}

<div class="container mt-4">
    <h3>Assign Course to Student</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @* @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    } *@

    <form asp-action="AssignCourse" method="post">
        <input type="hidden" name="studentId" value="@studentId" />
        <div class="form-group mb-2">
            <label>Select Course</label>
            <select name="courseId" class="form-control">
                @foreach (var course in courseList)
                {
                    <option value="@course.Value">@course.Text</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-secondary">Assign Course</button>
    </form>

    <hr />
    <h5>Already Assigned Courses:</h5>
    <ul>
        @foreach (var course in assignedCourses)
        {
            <li>@course.Title</li>
        }
    </ul>
</div>
