@using StudentManagementSystem.Business.DTOs
@model List<InstructorDto>

@{
    ViewBag.Title = "Assign Instructor";
    var courseId = ViewBag.CourseId;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h5 class="mb-0">Assign Instructor to Course</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignInstructor" method="post" novalidate>
                        <input type="hidden" name="CourseId" value="@courseId" />

                        <div class="mb-3">
                            <label for="InstructorId" class="form-label">Select Instructor</label>
                            <select name="InstructorId" id="InstructorId" class="form-select" required>
                                <option value="">-- Select Instructor --</option>
                                @foreach (var instructor in Model)
                                {
                                    <option value="@instructor.Id">@instructor.Name</option>
                                }
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Assign</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
