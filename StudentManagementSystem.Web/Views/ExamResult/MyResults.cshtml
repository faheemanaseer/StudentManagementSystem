@model List<StudentManagementSystem.Web.Models.ExamResultDisplayViewModel>
@{
    ViewBag.Title = "My Results";
}

<h2>My Results</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning">@ViewBag.Message</div>
}
else if (Model.Count == 0)
{
    <div class="alert alert-info">No results available.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course</th>
                <th>Marks</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@(item.Grade == "Not assigned yet" ? "Not assigned yet" : item.Marks.ToString())</td>
                    <td>@item.Grade</td>
                </tr>
            }
        </tbody>
    </table>
}
